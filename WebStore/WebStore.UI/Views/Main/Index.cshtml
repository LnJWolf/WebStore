@{
    ViewBag.Title = "Список продуктов";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            @using (Ajax.BeginForm("Products", "Product", new AjaxOptions
            {
                AllowCache = false,
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "product-list"
            }))
            {
                <div class="form-group">
                    <label for="Name"></label>
                    <input type="text" name="Name" value="" />
                </div>

                <button type="submit" class="btn btn-default">Фильтр</button>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div id="product-list">
                @Html.Action("Products", "Product")
            </div>
        </div>
    </div>
</div>