@model WebStore.Domain.Entities.Product[]
@{
	ViewBag.Title = "Ваша корзина";
}

<h2>Ваша Корзина</h2>
<div class="table-responsive">
	<table class="table table-hover table-bordered">
		<thead>
			<tr>
				<th>
					Имя
				</th>
				<th>
					Категория
				</th>
				<th>
					Цена/за штуку
				</th>
				<th>
					Количество
				</th>
				<th>
					Действия
				</th>
			</tr>
		</thead>
		<tbody>
			@for(int i = 0; i < Model.Length; i++)
            {
				<tr>
					<td>
						@Model[i].Name
					</td>
					<td>
						@Model[i].Category.Name
					</td>
					<td>
						@ViewBag.cP4P[i] / @Model[i].Price
					</td>
					<td>
						@ViewBag.Quantities[i]
					</td>
					<td>
						<a href="@Url.Action("RemoveFromCart", "Cart", new { id = Model[i].Id })" class="btn btn-danger">Удалить</a>
						<a href="@Url.Action("AddToCart", "Cart", new { id = Model[i].Id , IsIndex = false })" class="btn btn-success">Добавить ещё одну копию</a>
					</td>
				</tr>
            }
			<tr>
				<td>
					Итого:
				</td>
				<td>

				</td>
				<td>
					@ViewBag.total
				</td>
			</tr>
		</tbody>
	</table>
</div>

<a href="@Url.Action("Index", "Main")" class="btn btn-info">
	Назад в магазин
</a>